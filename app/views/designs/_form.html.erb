<%= form_with(model: design, local: true) do |form| %>
  <% if design.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(design.errors.count, "error") %> prohibited this design from being saved:</h2>

      <ul>
      <% design.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :Design_name %>
    <%= form.text_field :Design_name, id: :design_Design_name %>
  </div>

  <div class="field">
    <%= form.label :Design_suittype %>
    <%= form.collection_select(:Design_suittype, Master::Variety.all, :variety,:variety, prompt: "Choose Suit type") %>
  </div>

  <div class= "field">
    <%= form.label :size %>
    <%= form.collection_select(:size, Master::Size.all,:size,:size, prompt: "Select the size")%>
  </div>

  <div class = "field">
    <%= form.label :parts %>
    <%= collection_check_boxes(:design, :parts, Master::Part.all, :suitpart  ,:suitpart) do |b|%>
    <%= b.label { b.check_box + b.text}%>
    <%end%>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
