<p id="notice"><%= notice %></p>

<h1>Master Sizes</h1>

<table>
  <thead>
    <tr>
      <th>Size</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @master_sizes.each do |master_size| %>
      <tr>
        <td><%= master_size.size %></td>
        <td><%= link_to 'Show', master_size %></td>
        <td><%= link_to 'Edit', edit_master_size_path(master_size) %></td>
        <td><%= link_to 'Destroy', master_size, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

