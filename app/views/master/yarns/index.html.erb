<p id="notice"><%= notice %></p>

<h1>Master Yarns</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Color</th>
      <th>Lotnumber</th>
      <th>Quantity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @master_yarns.each do |master_yarn| %>
      <tr>
        <td><%= master_yarn.Date %></td>
        <td><%= master_yarn.Color %></td>
        <td><%= master_yarn.Lotnumber %></td>
        <td><%= master_yarn.Quantity %></td>
        <td><%= link_to 'Show', master_yarn %></td>
        <td><%= link_to 'Edit', edit_master_yarn_path(master_yarn) %></td>
        <td><%= link_to 'Destroy', master_yarn, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

